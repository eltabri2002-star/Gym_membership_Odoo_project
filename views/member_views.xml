<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Root Menu for Gym Management -->
    <menuitem 
        id="menu_gym_root" 
        name="GymFlow Manager" 
        sequence="10"/>
        

    <!-- Action to open the Member List -->
    <record id="action_gym_member_view" model="ir.actions.act_window">
        <field name="name">All Members</field>
        <field name="res_model">gym.member</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click here to register the first gym member.
            </p>
        </field>
    </record>

    <!-- Sub-Menu for Members -->
    <menuitem 
        id="menu_gym_members" 
        name="Members" 
        parent="menu_gym_root" 
        action="action_gym_member_view" 
        sequence="1"/>

    <!-- Member List View -->
    <record id="view_gym_member_list" model="ir.ui.view">
        <field name="name">gym.member.list</field>
        <field name="model">gym.member</field>
        <field name="arch" type="xml">
            <list string="Gym Members" decoration-success="status == 'active'" decoration-danger="status == 'expired'">
                <field name="name"/>
                <field name="trainee_id"/> 
                <field name="phone"/>
                <field name="plan_type" widget="badge"/>
                <field name="end_date"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Member Form View -->
    <record id="view_gym_member_form" model="ir.ui.view">
        <field name="name">gym.member.form</field>
        <field name="model">gym.member</field>
        <field name="arch" type="xml">
            <form string="Gym Member">
                <header>
                    <field name="status" widget="statusbar" statusbar_visible="active,expired"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Member Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="phone"/>
                            <field name="national_id"/>
                            <field name="trainee_id"/> 
                        </group>
                        <group string="Subscription Details">
                            <field name="plan_type"/>
                            <field name="start_date"/>
                            <field name="end_date" class="oe_inline"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <!-- Action to open the Trainee List -->
    <record id="action_gym_trainee_view" model="ir.actions.act_window">
        <field name="name">Coaches</field>
        <field name="res_model">gym.trainee</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register the gym coaches here.
            </p>
        </field>
    </record>

    <!-- Sub-Menu for Coaches -->
    <menuitem 
        id="menu_gym_trainees" 
        name="Coaches" 
        parent="menu_gym_root" 
        action="action_gym_trainee_view" 
        sequence="2"/>
    
    <!-- Trainee List View -->
    <record id="view_gym_trainee_list" model="ir.ui.view">
        <field name="name">gym.trainee.list</field>
        <field name="model">gym.trainee</field>
        <field name="arch" type="xml">
            <list string="Gym Coaches">
                <field name="name"/>
                <field name="phone"/>
                <field name="member_count"/>
            </list>
        </field>
    </record>

    <!-- Trainee Form View -->
    <record id="view_gym_trainee_form" model="ir.ui.view">
        <field name="name">gym.trainee.form</field>
        <field name="model">gym.trainee</field>
        <field name="arch" type="xml">
            <form string="Gym Coach">
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Coach Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="phone"/>
                            <field name="national_id"/>
                        </group>
                        <group>
                            <field name="member_count"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Assigned Members">
                            <field name="member_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="phone"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
               <chatter/>
            </form>
        </field>
    </record>
</odoo>


