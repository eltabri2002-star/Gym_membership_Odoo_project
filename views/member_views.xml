<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Root Menu for Gym Management -->
    <menuitem 
        id="menu_gym_root" 
        name="GymFlow Manager" 
        sequence="10"/>

    <!-- Action to open the Member List (MOVED UP) -->
    <record id="action_gym_member_view" model="ir.actions.act_window">
        <field name="name">All Members</field>
        <field name="res_model">gym.member</field>
        <!-- FIX: Changed view_mode from 'tree,form' to 'list,form' to comply with Odoo 18 validation -->
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click here to register the first gym member.
            </p>
        </field>
    </record>

    <!-- Sub-Menu for Members (REFERENCES the action above) -->
    <menuitem 
        id="menu_gym_members" 
        name="Members" 
        parent="menu_gym_root" 
        action="action_gym_member_view" 
        sequence="1"/>

    <!-- Tree/List View -->
    <record id="view_gym_member_list" model="ir.ui.view">
        <field name="name">gym.member.list</field>
        <field name="model">gym.member</field>
        <field name="arch" type="xml">
            <!-- IMPORTANT: Using <list> instead of <tree> for Odoo 18 compatibility -->
            <list string="Gym Members" decoration-success="status == 'active'" decoration-danger="status == 'expired'">
                <field name="name"/>
                <field name="phone"/>
                <field name="plan_type" widget="badge"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_gym_member_form" model="ir.ui.view">
        <field name="name">gym.member.form</field>
        <field name="model">gym.member</field>
        <field name="arch" type="xml">
            <form string="Gym Member">
                <header>
                    <field name="status" widget="statusbar" statusbar_visible="active,expired"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Member Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="phone"/>
                            <field name="national_id"/>
                        </group>
                        <group string="Subscription Details">
                            <field name="plan_type"/>
                            <field name="start_date"/>
                            <field name="end_date" class="oe_inline"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>
